{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.19/MicrosoftTeams.schema.json",
    "manifestVersion": "1.19",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "developer": {
        "name": "Okahu, Inc.",
        "websiteUrl": "https://okahu.ai",
        "privacyUrl": "https://www.okahu.ai/agreements/privacy-policy",
        "termsOfUseUrl": "https://www.okahu.ai/agreements/evaluation-agreement"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "employee-teams-basic-bot${{APP_NAME_SUFFIX}}",
        "full": "Okahu Employee Q&A bot"
    },
    "description": {
        "short": "Bot to answers employee's questions",
        "full": "An M365 agent that answers employees questions about HR policies."
    },
    "accentColor": "#F26C74",
    "bots": [
        {
            "botId": "${{BOT_ID}}",
            "scopes": [
                "personal",
                "team",
                "groupChat"
            ],
            "supportsFiles": false,
            "isNotificationOnly": false,
            "commandLists": [
                {
                    "scopes": [
                        "personal"
                    ],
                    "commands": [
                        {
                            "title": "How can you help me?",
                            "description": "How can you help me?"
                        }
                    ]
                }
            ]
        }
    ],
    "composeExtensions": [],
    "configurableTabs": [],
    "staticTabs": [],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": []
}
